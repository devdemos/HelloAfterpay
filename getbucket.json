{
    "AWSTemplateFormatVersion": "2010-09-09",
    "Description": "Attach IAM Role to an EC2",
    "Resources": {
        "ApplicationS3BucketsPolicy" : {
            "Type" : "AWS::IAM::Policy",
            "Properties" : {
              "PolicyName" : "ApplicationS3BucketsPolicy",
              "PolicyDocument" : {
                "Statement" : [
                  {
                    "Effect" : "Allow",
                    "Action" : [
                      "s3:List*"
                    ],
                    "Resource" : "*"
                  }
                ]
              },
              "Roles" : [
                {
                  "Ref" : "ApplicationS3BucketsRole"
                }
              ]
            }
        },
        "ApplicationS3BucketsInstanceProfile": {
            "Type": "AWS::IAM::InstanceProfile",
            "Properties": {
                "Path": "/",
                "Roles": [
                    {
                        "Ref": "ApplicationS3BucketsRole"
                    }
                ]
            },
        },
        "ApplicationS3BucketsRole": {
            "Type": "AWS::IAM::Role",
            "Properties": {
                "AssumeRolePolicyDocument": {
                    "Version": "2012-10-17",
                    "Statement": [
                        {
                            "Effect": "Allow",
                            "Principal": {
                                "Service": [
                                    "ec2.amazonaws.com"
                                ]
                            },
                            "Action": [
                                "sts:AssumeRole"
                            ]
                        }
                    ]
                },
                "Path": "/"
            },
        },
    },
}